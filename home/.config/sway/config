exec waybar

# Set the default terminal
set $term ghostty

# Configure workspace names
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"

# Mod1 is Alt
set $mod Mod1

# Launch terminal
bindsym $mod+Return exec $term

# Close focused window
bindsym $mod+Shift+c kill

# Reload sway configuration
bindsym $mod+Shift+r reload

# Exit sway (log out of the current session)
bindsym $mod+Shift+e exec swaynag -t warning -m 'Do you really want to exit?' -b 'Yes, exit sway' 'swaymsg exit'

# Alt+Tab
bindsym Mod1+Tab [con_id="__focused__"] focus next
bindsym Mod1+Shift+Tab [con_id="__focused__"] focus prev

# Window focus with vim keys
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Window focus with arrow keys
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move the focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Move the focused window, with arrow keys
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right


# Switch workspaces
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4

# Launch applications
bindsym $mod+b exec firefox

# Application launcher
# Note: pass the final command to swaymsg so that the resulting window can be opened
# on the original workspace that the command was run on.
#set $menu dmenu_path | dmenu | xargs swaymsg exec --

# Use Wofi as application launcher
bindsym $mod+d exec wofi --show drun


# Make the current focus fullscreen
bindsym $mod+f fullscreen


# Floating windows
for_window [class="confirm"] floating enable
for_window [class="dialog"] floating enable
for_window [class="file_progress"] floating enable
for_window [title="Save File"] floating enable

# Set gaps between windows (optional)
smart_gaps on
gaps inner 20

# BAR CONFIG
# -----------------------------------------------------------------------------
# bar {
#     position top
#     status_command while true; do echo ""; sleep 1; done
#     font pango:monospace 10
#     height 20
# }

# OUTPUTS
# -----------------------------------------------------------------------------

# Output configuration
output * bg $background fill

output HDMI-A-1 {
    pos 0 0
    resolution 2560x1440
}

output DP-2 {
    pos 2560 0
    resolution 1080x1920
    transform 90
}

# INPUTS
# -----------------------------------------------------------------------------

# Remap caps to esc
input * xkb_options caps:escape

# Faster key response
input type:keyboard {
  repeat_delay 300
  repeat_rate 50
}

# Enable tap to click
input type:touchpad {
  tap enabled
}

# -----------------------------------------------------------------------------

# Open Alacritty on HDMI-A-1 with specific dimensions
#for_window [app_id="Alacritty"] move to output HDMI-A-1
# for_window [app_id="Alacritty"] floating enable, resize set 256x1440, move position 2304 0
#for_window [app_id="Alacritty"] sticky enable
bindsym $mod+Shift+t exec swaymsg '[app_id="Alacritty"] focus' || alacritty



# Start applications on specific workspaces
#assign [class="firefox"] $ws2

workspace 1 output HDMI-A-1
workspace 2 output HDMI-A-1
workspace 3 output HDMI-A-1
workspace 4 output HDMI-A-1
workspace 5 output HDMI-A-1
workspace 6 output HDMI-A-1
workspace 7 output HDMI-A-1
workspace 8 output HDMI-A-1
workspace 9 output HDMI-A-1
workspace 10 output HDMI-A-1



